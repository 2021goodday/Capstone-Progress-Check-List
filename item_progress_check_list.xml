<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Startup Company TextView -->
        <TextView
            android:id="@+id/startupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZenithWorks"
            android:layout_marginBottom="18dp"
            android:textSize="22.5sp"
            android:textStyle="bold"
            android:textColor="#1073ad" />

        <!-- Project name TextView and Startup logo -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/system_logo" />

            <TextView
                android:id="@+id/projectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:text="AI Transportation System "
                android:textSize="19sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Progress Status TextView and View Progress Report Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Status Icon (dynamic) -->
            <ImageView
                android:id="@+id/statusIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/status_ongoing" /> <!-- Placeholder for default image -->

            <TextView
                android:id="@+id/progressStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:text="On-going"
                android:textSize="19sp" />

            <!-- Spacer to push the button to the right -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <!-- View Progress Report Button (right aligned) -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/viewProgressReportButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/project_rounded"
                android:text="View"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
